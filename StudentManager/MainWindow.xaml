<Window x:Class="StudentManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentManager"
        mc:Ignorable="d"
        Title="SQLite Demo" Height="350" Width="400" Background="Linen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0 0 0 10">
            <TextBox Width="200"
                     Height="19"
                     x:Name="InputName"
                     Margin="0 0 0 10"/>
            <Button Content="➕ Добавить"
                    Height="19"
                    FontFamily="Segoe UI"
                    FontWeight="Bold"
                    Foreground="White"
                    Background="Green"
                    VerticalAlignment="Top"
                    Width="150"
                    Click="Add_Click"
                    Margin="10 0 0 0"/>
        </StackPanel>
        <Button Content="Удалить выбранное 🗑"
                Grid.Row="1"
                Width="150"
                FontWeight="Bold"
                Foreground="White"
                Background="OrangeRed"
                Margin="0 0 0 10" Click="Delete_Click"/>
        <DataGrid Grid.Row="2"
                  x:Name="DataGridPeople"/>
    </Grid>
</Window>
